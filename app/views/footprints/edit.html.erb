<div class="jumbotron text-center" style='margin-bottom: .3rem'>
  <h5 class="display-4" id='edit-footprint-header'>
    Edit Your Footprint</h5>
</div>

<section class="edit-footprint-form">
  <div class="row">
    <%# col-sm on either side centers form on page %>
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <div class='footprint-month'>
        <%= @footprint.month %>
      </div>
      <div class='footprint-year'>
        <%= @footprint.year %>
      </div>
      <div class='footprint-mileage'>
        Previous Mileage: <%= @footprint.total_mileage %>
      </div>
      <div class="container">
        <%= form_tag "/footprints/#{@footprint.id}", method: :patch, class: 'footprint-edit' do %>
          <div class="form-group row">
              <%= label_tag :total_mileage, 'New Total Mileage', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= text_field_tag :total_mileage, params[:total_mileage], class: "form-control" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= submit_tag 'Save', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm">
    </div>
  </div>
</section>